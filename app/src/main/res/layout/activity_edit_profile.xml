<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.halfway.yogamylife.EditProfile">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_edit_profil"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="30dp"
        android:background="@color/white" />
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_edit_profil"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_edit_profil"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/edit_profile"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="@string/bio"/>
            <TextView
                android:labelFor="@+id/et_profil_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:text="@string/first_name"/>
            <EditText
                android:id="@+id/et_profil_first_name"
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:layout_height="wrap_content"
                android:maxLength="30" />
            <TextView
                android:labelFor="@+id/et_profil_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:text="@string/last_name"/>
            <EditText
                android:id="@+id/et_profil_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLength="30" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="@string/about"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/et_write_text"
                android:layout_marginTop="36dp"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:text="@string/write_text"/>
            <EditText
                android:id="@+id/et_write_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="500" />
            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="23dp"
                android:background="@color/color"
                android:textSize="14sp"
                android:text="@string/save"
                android:clickable="true"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
