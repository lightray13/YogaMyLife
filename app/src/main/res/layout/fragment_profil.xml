<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.halfway.yogamylife.ProfilFragment">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_edit_profil"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="137dp">
        <!--<ImageView-->
            <!--android:id="@+id/iv_profil"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="100dp"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_marginStart="16dp"-->
            <!--android:src="@drawable/profil_default"/>-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profil"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/profil_default" />
        <TextView
            android:id="@+id/tv_profil_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_profil"
            android:layout_marginTop="38dp"
            android:layout_marginStart="16dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/first_name"/>
        <TextView
            android:id="@+id/tv_profil_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_profil"
            android:layout_below="@+id/tv_profil_first_name"
            android:layout_marginTop="2dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:text="@string/last_name"/>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_orders"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="16dp"
            android:clickable="true"
            android:background="@color/white"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/orders"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/orders"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_support"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="16dp"
            android:clickable="true"
            android:background="@color/white"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/support"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/support"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_help"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="16dp"
            android:clickable="true"
            android:background="@color/white"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/help"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/faq"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_shipping_address"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="16dp"
            android:clickable="true"
            android:background="@color/white"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/shipping_address"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/shipping"/>
        </RelativeLayout>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="@color/darke_grey"
        android:text="@string/version"/>
    <Button
        android:id="@+id/btn_log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="34dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:text="@string/log_out"/>
    <!--<Button-->
        <!--android:id="@+id/btn_delete_account"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="2dp"-->
        <!--android:padding="16dp"-->
        <!--android:layout_marginBottom="34dp"-->
        <!--android:textAllCaps="false"-->
        <!--android:textSize="20sp"-->
        <!--android:textColor="@color/red"-->
        <!--android:background="@color/white"-->
        <!--android:text="@string/delete_account"/>-->
</LinearLayout>
    </ScrollView>
</FrameLayout>
