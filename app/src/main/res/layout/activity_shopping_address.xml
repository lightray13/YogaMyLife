<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.halfway.yogamylife.ShoppingAddress">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_shopping_address"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="30dp"
        android:background="@color/white" />
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_shopping_address"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="vertical">
            <TextView
                android:labelFor="@+id/et_profil_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="28dp"
                android:textColor="@color/grey"
                android:text="@string/company"/>
            <EditText
                android:id="@+id/et_profil_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="50"
                android:inputType="text"/>
            <TextView
                android:labelFor="@+id/et_profil_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:text="@string/address"/>
            <EditText
                android:id="@+id/et_profil_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="200"
                android:inputType="text"/>
            <TextView
                android:labelFor="@+id/et_profil_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="28dp"
                android:textColor="@color/grey"
                android:text="@string/etc"/>
            <EditText
                android:id="@+id/et_profil_etc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="200"
                android:inputType="text"/>
            <TextView
                android:labelFor="@+id/et_profil_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="28dp"
                android:textColor="@color/grey"
                android:text="@string/city"/>
            <EditText
                android:id="@+id/et_profil_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="50"
                android:inputType="text"/>
            <TextView
                android:labelFor="@+id/et_profil_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="28dp"
                android:textColor="@color/grey"
                android:text="@string/country"/>
            <EditText
                android:id="@+id/et_profil_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="50"
                android:inputType="text"/>
            <TextView
                android:labelFor="@+id/et_profil_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="28dp"
                android:textColor="@color/grey"
                android:text="@string/state"/>
            <EditText
                android:id="@+id/et_profil_province"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="50"
                android:inputType="text"/>
            <TextView
                android:labelFor="@+id/et_profil_zip_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="28dp"
                android:textColor="@color/grey"
                android:text="@string/zip_code"/>
            <EditText
                android:id="@+id/et_profil_zip_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="50"
                android:inputType="numberDecimal"/>
            <TextView
                android:labelFor="@+id/et_profil_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="28dp"
                android:textColor="@color/grey"
                android:text="@string/phone" />
            <EditText
                android:id="@+id/et_profil_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:maxLength="50"
                android:inputType="phone"/>
            <Button
                android:id="@+id/btn_profil_save"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/color"
                android:textSize="14sp"
                android:text="@string/save"
                android:clickable="true"
                android:textColor="@color/white"
                android:layout_marginBottom="48dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
