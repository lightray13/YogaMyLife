<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loopergroupcopy5"
    android:layout_margin="10dp"
    tools:context="com.halfway.yogamylife.Name">
        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentStart="true"
            android:textColor="@color/darke_grey"
            android:textSize="24pt"
            android:fontFamily="Roboto"
            android:layout_marginTop="80dp" />
        <TextView
            android:id="@+id/tv_your_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="24dp"
            android:layout_below="@id/text_view_name"
            android:textSize="10pt"
            android:textColor="@color/grey"
            android:text="@string/your_name"/>
        <TextView
            android:id="@+id/tv_first_name"
            android:labelFor="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="48dp"
            android:layout_below="@id/tv_your_name"
            android:textSize="8pt"
            android:textColor="@color/grey"
            android:text="@string/first_name" />
        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_first_name"
            android:inputType="textPersonName"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:maxLength="30"
            android:textSize="8pt"/>
        <TextView
            android:id="@+id/tv_last_name"
            android:labelFor="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:maxLength="30"
            android:textSize="8pt"
            android:layout_below="@id/et_first_name"
            android:textColor="@color/grey"
            android:text="@string/last_name" />
        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/tv_last_name"
            android:maxLength="30"
            android:inputType="textPersonName"
            android:textSize="8pt"/>
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/rounded_log"
            android:layout_alignParentBottom="true"
            android:text="@string/cancel"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded"
            android:layout_above="@id/btnCancel"
            android:textColor="@color/white"
            android:text="@string/next"
            android:textAllCaps="false" />

    </RelativeLayout>
